#include <Servo.h>
//모터 두개_초음파

#define trig 8
#define echo 9


Servo m1;
Servo m2;
int sw1=0;
int sw2=0;



void setup() {
 pinMode(3,INPUT);
 pinMode(5,INPUT);
 m1.attach(2);
 m1.write(0);
 m2.attach(4);
 m2.write(0);

 Serial.begin(9600);
 pinMode(trig, OUTPUT);
 pinMode(echo, INPUT);
}

void loop() {
  long duration, distance;

  digitalWrite(trig, LOW);
  digitalWrite(echo, LOW);
  delayMicroseconds(2);
  digitalWrite(trig, HIGH);
  delayMicroseconds(10);
  digitalWrite(trig, LOW);

  duration = pulseIn(echo, HIGH);
  distance = ((float)(340*duration)/10000)/2;

  Serial.print("거리: ");
  Serial.print(distance);
  Serial.println("cm");
  
  
  sw1=digitalRead(3);
  if(sw1==HIGH)
  {
    
    if (distance < 10){
      Serial.println("10cm 이내");
      m1.write(180);
      Serial.println("1눌림");
      delay(3000);
      m1.write(0);
      }  
  }
  sw2=digitalRead(5);
  if(sw2==HIGH)
  {
    
    if (distance < 10){
      Serial.println("10cm 이내");
      m2.write(180);
      Serial.println("2눌림");
      delay(3000);
      m2.write(0);
    }
  }
}
